@model megan_mayle.ViewModels.PostDisplay

@{
    ViewBag.Excerpt = Model.PostExcerpt;
}

<header>
    <section class="blue-section">
        <div class="container text-center">
            <div class="light-gray margin-top-30">
                <span class="author_name">
                    @Model.PostDatePosted.ToString("MMM dd, yyyy")
                </span>
                <span>&nbsp;&nbsp;|&nbsp;&nbsp;</span>
                <span class="author_name">
                    @Model.AuthorName
                </span>
            </div>
        </div>
    </section>
</header>
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <article class="post">
                <div class="post-content">
                    <div class="page-container">
                        <article>
                            <h2>@Model.PostTitle</h2>
                            <p>@Html.Raw(Model.Markdown)</p>
                        </article>
                    </div>
                </div>
            </article>
            <div id="disqus_thread"></div>
        </div>
    </div>
</div>
<script>
    var disqus_config = function () {
        this.page.url = 'http://teamvirtuoso.com/blog/@Model.PostSlug';  // Replace PAGE_URL with your page's canonical URL variable
        this.page.identifier = '@Model.PostSlug'; // Replace PAGE_IDENTIFIER with your page's unique identifier variable
    };
    (function () { // DON'T EDIT BELOW THIS LINE
        var d = document, s = d.createElement('script');
        s.src = '//teamvirtuoso.disqus.com/embed.js';
        s.setAttribute('data-timestamp', +new Date());
        (d.head || d.body).appendChild(s);
    })();
</script>
<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>